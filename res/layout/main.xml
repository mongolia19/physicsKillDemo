<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >



<ImageView
    android:id="@+id/PlayerImageView" 
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:src="@drawable/newton" />

<ImageView  
    android:id="@+id/CpuImageView" 
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:src="@drawable/bernuli" />

<ImageButton
    android:id="@+id/ImageButton02"
    android:layout_width="50dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/CpuImageView" 
 
    android:tag="2" />

<ImageButton
    android:id="@+id/ImageButton00"
    android:layout_width="50dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    
    android:tag="0" />

<ImageButton
    android:id="@+id/ImageButton01"
    android:layout_width="50dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/ImageButton02"
    
    android:tag="1" />

<ImageButton
    android:id="@+id/ImageButton03"
    android:layout_width="50dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/ImageButton02"
   
    android:tag="3" />

<Button
    android:id="@+id/PlayBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/PlayerImageView"
    android:layout_alignLeft="@+id/PlayerImageView"
    android:layout_alignParentRight="true"
    android:text="Play" />

<ImageView
    android:id="@+id/PlayerCardImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/ImageButton02"
    android:layout_centerVertical="true"
     />

<ImageView
    android:id="@+id/CpuCardImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/ImageButton03"
    android:layout_alignTop="@+id/PlayerCardImageView"
     />

<TextView
    android:id="@+id/PlayerHandCardNumView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/PlayBtn"
    android:layout_alignParentRight="true"
    android:text="0"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/PlayerHandCardNumView"
    android:layout_alignParentRight="true"
    android:text="手牌数"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/PlayerMassView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView2"
    android:layout_alignParentRight="true"
    android:text="0"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/PlayerMassView"
    android:layout_alignParentRight="true"
    android:text="质量"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/ImageButton03"
    android:text="质量"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/CpuMassView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView1"
    android:layout_below="@+id/textView1"
    android:text="0"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/CpuCardImageView"
    android:layout_below="@+id/CpuMassView"
    android:text="手牌数"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/CpuHandCardNumView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/CpuMassView"
    android:layout_below="@+id/textView3"
    android:layout_toLeftOf="@+id/PlayBtn"
    android:text="0"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/GameStateTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/CpuImageView" 
    android:layout_marginTop="18dp"
    android:text="Large Text"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<Button
    android:id="@+id/DeSelectBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/PlayBtn"
    android:layout_toRightOf="@+id/ImageButton02"
    android:text="弃牌" />

</RelativeLayout>
